<% if (typeof errorMessage !== 'undefined' && Array.isArray(errorMessage) && errorMessage.length > 0) { %>
        <ul class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
          <% errorMessage.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
<% } %>